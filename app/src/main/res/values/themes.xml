<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CrearTema" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
        <!-- Agrega otros estilos de componentes segÃºn tus necesidades -->
    </style>
    <style name="Tema1" parent="Theme.MaterialComponents.Light">
        <!-- Colores -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent</item>
        <!-- Otros atributos -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@drawable/degradado</item>
    </style>

    <style name="Tema2" parent="Theme.Material3.DayNight.NoActionBar" >
        <!-- Colores -->
        <item name="colorPrimary">@color/primary2</item>
        <item name="colorPrimaryVariant">@color/primary_dark2</item>
        <item name="colorSecondary">@color/accent2</item>
        <!-- Otros atributos -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/degradado2</item>
    </style>

    <style name="BotonMaterialStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>